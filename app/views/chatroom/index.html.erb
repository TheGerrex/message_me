<h4 class="ui center aligned icon header">
  <i class="circular red comment icon"></i>
  Say something
</h4>

<div class="ui two colum grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui comments">
          <% @messages.each do |message| %>
            <div class="comment">
              <a class="avatar">
                <div class="circle-avatar">
                  <i class="large black user icon"></i>
                </div>
              </a>
              <div class="content">
                <div class="author">
                  <%= message.user.username%>
                  <div class="metadata">
                    <span class="date">
                      <%= time_ago_in_words(message.created_at) %> ago
                    </span>
                  </div>
                </div>
                <div class="text">
                  <%= message.body%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="extra content">
          <form class="ui reply form">
            <div class="field">
              <div class="ui fluid icon input">
                <input type="text" placeholder="Enter a message...">
                <i class="bordered inverted red paper plane icon"></i>
              </div>
            </div>
          </form>
        </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>

</div>